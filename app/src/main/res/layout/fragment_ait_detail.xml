<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.info.AitDetailFragment">

    <TextView
        android:id="@+id/ait_Heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/marginAll2"
        app:layout_constraintTop_toTopOf="parent"
        android:textStyle="bold"
        android:textSize="@dimen/marginAll3"
        tools:text="Заголовок"
        android:text="123"/>

    <TextView
        android:id="@+id/ait_description"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="@dimen/marginAll2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ait_Heading"
        app:layout_constraintVertical_bias="0.0"
        android:textSize="@dimen/marginAll"
        tools:text="Описание"
        android:text="234"/>

</androidx.constraintlayout.widget.ConstraintLayout>