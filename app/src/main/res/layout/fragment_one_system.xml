<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.info.OneSystemFragment">

    <TextView
        android:id="@+id/tv_one_system"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ps_heading"
        android:textAlignment="center"
        android:textSize="@dimen/heading"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="@dimen/marginAll2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_one_system"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scrollbars="vertical"
        android:layout_margin="@dimen/marginAllRecyclerView"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_one_system"
        app:layout_constraintVertical_bias="1.0"
        tools:listitem="@layout/item_ps_1"
        android:clipToPadding="false"/>

</androidx.constraintlayout.widget.ConstraintLayout>